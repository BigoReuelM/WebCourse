<% include partials/head.ejs %>
<!-- Page Header Start -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="breadcrumb-wrapper">
          <h2 class="page-title">Activities</h2>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Page Header End -->

<!-- Start Content Section -->
<section id="content" class="error-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="error-page">
          <h3>Activities here...</h3>
          <div class="list-group">
            <% if(activities){
                activities.forEach(function(act){ %>
                  <a data-toggle="modal" data-act = "<%=act.activityID %>"
                  data-target="#quizConfirmDialog" href="#"
                  class="list-group-item list-group-item-action">
                    <%= act.activityDescription %>
                  </a>
                  <% })} %>
          </div>
      </div>
    </div>
  </div>
</section>
<!-- End Content Section  -->
<!-- Modal -->
<div class="modal fade" id="quizConfirmDialog" tabindex="-1" role="dialog"
aria-labelledby="quizConfirmLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="quizConfirmLabel">Activity</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Do you really want to take the quiz? </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        <button id="yesBtn" type="button" class="btn btn-success">Yes</button>
      </div>
    </div>
  </div>
</div>
<% include partials/footer.ejs %>
